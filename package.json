{
  "name": "root",
  "private": true,
  "repository": "https://gitlab.kilic.dev/libraries/oclif-common",
  "type": "module",
  "scripts": {
    "clean": "rimraf node_modules pnpm-lock.yaml",
    "build": "pnpm run -r build",
    "format": "pnpm run --parallel -r format",
    "lint": "pnpm run --parallel -r lint"
  },
  "workspaces": [
    "packages/*",
    "example"
  ],
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged",
    "prepare-commit-msg": "[ -t 1 ] && exec < /dev/tty && git cz --hook || true"
  },
  "devDependencies": {
    "@cenk1cenk2/cz-cc": "^1.8.1",
    "@cenk1cenk2/eslint-config": "^3.1.37",
    "@swc/core": "^1.11.22",
    "@tsconfig/node16": "^16.1.3",
    "commitizen": "^4.3.1",
    "eslint": "^9.25.1",
    "eslint-plugin-import": "^2.31.0",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "simple-git-hooks": "^2.13.0",
    "tsconfig-replace-paths": "^0.0.14",
    "tsup": "^8.4.0",
    "typedoc": "^0.28.0",
    "typedoc-plugin-markdown": "^4.5.1",
    "typescript": "^5.8.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@cenk1cenk2/cz-cc"
    }
  }
}
