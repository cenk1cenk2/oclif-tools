{
  "name": "root",
  "private": true,
  "repository": "https://gitlab.kilic.dev/libraries/oclif-common",
  "type": "module",
  "scripts": {
    "clean": "rimraf node_modules pnpm-lock.yaml",
    "build": "pnpm run -r build",
    "format": "pnpm run --parallel -r format",
    "lint": "pnpm run --parallel -r lint"
  },
  "workspaces": [
    "packages/*",
    "example"
  ],
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged",
    "prepare-commit-msg": "[ -t 1 ] && exec < /dev/tty && git cz --hook || true"
  },
  "devDependencies": {
    "@cenk1cenk2/cz-cc": "^2.2.5",
    "@cenk1cenk2/eslint-config": "^3.2.0",
    "@tsconfig/node24": "^24.0.4",
    "commitizen": "^4.3.1",
    "eslint": "^10.0.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.20.3",
    "typedoc": "^0.28.17",
    "typedoc-plugin-markdown": "^4.10.0",
    "typescript": "^5.9.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@cenk1cenk2/cz-cc"
    }
  }
}
