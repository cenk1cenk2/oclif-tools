{
  "name": "@cenk1cenk2/oclif-common",
  "version": "1.0.0",
  "description": "Oclif common package for oclif2 projects.",
  "repository": "https://gitlab.kilic.dev/libraries/oclif-tools",
  "author": {
    "name": "Cenk Kilic",
    "email": "cenk@kilic.dev",
    "url": "https://srcs.kilic.dev"
  },
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">= 16"
  },
  "scripts": {
    "build": "tsup-node",
    "dev:start": "tsup-node --watch",
    "lint": "prettier --write src/ --loglevel warn && eslint --ext .ts,.js,.tsx,.jsx --fix src/",
    "lint:check": "eslint --ext .ts,.js,.tsx,.jsx src/",
    "docs:toc": "markdown-toc README.md --bullets='-' -i",
    "docs:api": "typedoc --options .typedoc.json --hideInPageTOC --hideBreadcrumbs"
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "prettier --loglevel warn --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --loglevel warn --write"
    ]
  },
  "peerDependencies": {
    "@oclif/core": ">= 1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2 || ^0.14.0",
    "enquirer": ">= 2",
    "execa": ">= 5",
    "fs-extra": ">= 10",
    "listr2": ">= 4",
    "update-notifier": "^5 || ^6.0.0"
  },
  "peerDependenciesMeta": {
    "execa": {
      "optional": true
    },
    "update-notifier": {
      "optional": true
    }
  },
  "dependencies": {
    "colorette": "^2.0.19",
    "deepmerge": "^4.2.2",
    "object-path-immutable": "^4.1.2",
    "reflect-metadata": "^0.1.13",
    "through": "^2.3.8",
    "update-notifier": "^5",
    "winston": "^3.8.2",
    "yaml": "^2.1.3"
  },
  "devDependencies": {
    "@oclif/core": "^1.21.0",
    "@types/fs-extra": "^9.0.13",
    "@types/through": "^0.0.30",
    "@types/update-notifier": "^6",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "enquirer": "^2.3.6",
    "execa": "^6",
    "fs-extra": "^10.1.0",
    "listr2": "^5.0.6"
  }
}
